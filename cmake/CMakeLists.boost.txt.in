cmake_minimum_required(VERSION 3.10)

project(boost-download NONE)

string(REPLACE "." "_" BOOST_VERSION_ "@BOOST_VERSION@")

string(JOIN "/" BOOST_URL
  "https://dl.bintray.com/boostorg/release"
  "@BOOST_VERSION@"
  "source/boost_${BOOST_VERSION_}.tar.gz")

include(ExternalProject)
ExternalProject_Add(Boost
  URL ${BOOST_URL}
  PREFIX "boost-@BOOST_VERSION@"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND ""
  INSTALL_COMMAND ""
)
